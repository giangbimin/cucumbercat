<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
  <div class="logo">login</div>
  <!-- Main Form -->
  <div class="login-form-1">
    <%= form_tag sessions_path, id: "login-form", class: "text-left" do |f|%>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <label for="lg_username" class="sr-only">Email</label>
            <%= text_field_tag :email, nil, for: 'lg_email',id: "lg_email", class: "form-control", placeholder: "email"%>
          </div>
          <div class="form-group">
            <label for="lg_password" class="sr-only">Password</label>
            <div class="password">
              <%= password_field_tag :password, nil, for: 'lg_password', id: "lg_password", class: "form-control", placeholder: "password"%>
              <span class="glyphicon glyphicon-eye-open"></span>
            </div>
          </div>
        </div>
        <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
      </div>
      <% if params[:show_hint] %>
        <div class="etc-login-form">
          <p><a href="#">Forgot your password</a></p>
          <p><%= link_to("Register new account", new_users_path) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- end:Main Form -->
</div>
